<% include partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">New Image!</h1>

		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="new name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="new image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-sm btn-default btn-block">Send</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

